<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.VehicleBuildDef ParentName="VehicleBaseBuildable">
		<defName>XCOM_Skyranger_Blueprint</defName>
		<label>Skyranger</label>
		<description>The Skyranger is a Vertical Take-Off and Landing (VTOL) troop transport aircraft which utilizes swiveling engines on either side of the fuselage to provide all the lifting power, in addition to the large main forward thruster.\n\nIt is significantly faster and more fuel-efficient than the industrial-era counterparts and its plasteel hull makes it resistant to small-arms fire, though the lack of armaments prevents it from acting in an aerial combat role.</description>
		<designationCategory>VF_Vehicles</designationCategory>
		
		<graphicData>
			<texPath>Skyranger/Skyranger</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(8, 13)</drawSize>
			<drawOffsetEast>(-1, 0, 0)</drawOffsetEast>
			<drawOffsetWest>(1, 0, 0)</drawOffsetWest>
		</graphicData>
		
		<size>(5, 10)</size>
		
		<statBases>
			<WorkToBuild>55000</WorkToBuild>
			<MaxHitPoints>1000</MaxHitPoints>
			<Flammability>0.05</Flammability>
		</statBases>
		
		<researchPrerequisites>
			<li>Skyranger_Research</li>
		</researchPrerequisites>
		
		<costList>
			<VVE_EngineBlock>6</VVE_EngineBlock>
			<VVE_CarAlternator>10</VVE_CarAlternator>
			<VVE_CarExhaust>8</VVE_CarExhaust>
			<VVE_CarSuspension>10</VVE_CarSuspension>
			<VVE_CarTransmission>4</VVE_CarTransmission>
			<VVE_CarWiring>8</VVE_CarWiring>
			<VVE_CarBattery>8</VVE_CarBattery>
			<Plasteel>900</Plasteel>
			<ComponentIndustrial>24</ComponentIndustrial>
			<ComponentSpacer>8</ComponentSpacer>
		</costList>
		
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<thingToSpawn>XCOM_Skyranger</thingToSpawn>
	</Vehicles.VehicleBuildDef>
</Defs>
